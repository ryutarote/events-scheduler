{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": null,
  "installCommand": "npm install -g pnpm && cd ../.. && pnpm install",
  "buildCommand": "cd ../.. && pnpm run build --filter=@ticket-scheduler/next && cp -r .next ../../apps/next/",
  "outputDirectory": ".next",
  "crons": [
    {
      "path": "/api/push/schedule",
      "schedule": "* * * * *"
    }
  ]
}
